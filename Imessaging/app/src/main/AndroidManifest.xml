<?xml version="1.0" encoding="utf-8"?>
< manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nazli.imessaging" >

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.BIND_TELECOM_CONNECTION_SERVICE"/>

    <uses-permission android:name="ANDROID.PERMISSION.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.BIND_CARRIER_SERVICES"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.BIND_CARRIER_SERVICES"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:killAfterRestore="true"
        android:banner="@mipmap/ic_launcher"
        android:enabled="true"
        android:exported="false">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <!-- Error on pressing back on app exit solved by Category - HOME-->
                <!--<category android:name="android.intent.category.HOME"/>-->
            </intent-filter>
            <activity
                android:name=".Conversation"
                android:banner="@style/AppTheme.UWECEApp">
                <intent-filter>
                    <action android:name="android.intent.action.SEARCH"/>
                    <category android:name="android.intent.category.APP_CONTACTS"/>
                </intent-filter>
            </activity>
        </activity>
        <!-- Conversation activity will do connection check-->


        <activity
            android:name=".Groups"
            android:banner="@style/AppTheme.UWECEApp">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
                <category android:name="android.intent.category.APP_CONTACTS"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ChatService"
            android:banner="@style/AppTheme.UWECEApp">
            <intent-filter>
                <action android:name="android.intent.action.RUN"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ContactList">
            <intent-filter>
                <action android:name="android.intent.action.SENDTO">
                </action>
                <data android:scheme="@string/send_to"></data>
            </intent-filter>
        </activity>

        <!-- Alternative option to register receiver-->
        <!--android:enabled="true"-->

        <receiver
            android:name="com.example.nazli.imessaging.Client"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
            <meta-data />
        </receiver>


    </application>


</manifest>
