<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearV"
    android:orientation="vertical"
    android:name="com.example.nazli.imessaging.Conversation"
    tools:layout="@layout/list_of_conversations"
    android:theme="@style/AppTheme.UWECEApp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="226dp"
            android:layout_height="52dp"
            android:gravity="left"
            android:id="@+id/conVlist_title"
            android:text="@string/conversation"
            android:theme="@style/AppTheme.UWECEApp"
            android:layout_weight="1"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_conv"
            android:id="@+id/add_conv_btn"
            android:layout_gravity="right"
            style="@style/AppTheme.UWECEApp"
            android:clickable="true"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_conv"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="416dp"
                android:id="@+id/listView_conv"
                android:layout_gravity="center_horizontal"
                android:listSelector="@android:color/transparent"
                android:clickable="true" />
        </TableLayout>
    </ScrollView>

</LinearLayout>