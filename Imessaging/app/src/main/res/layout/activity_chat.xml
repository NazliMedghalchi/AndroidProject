<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/fromS"
            android:gravity="center"
            android:layout_margin="10dp"
            android:editable="true"
            android:background="#fcf188"
            android:textColor="#000000"
            android:hint="server IP" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText_conv_title"
                android:theme="@style/textView_color"
                android:layout_gravity="right"
                android:hint="Add Group Title"
                android:hyphenationFrequency="none" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/from_server"
                android:layout_weight="2"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_search"
                android:layout_weight="0.15"
                android:hint="To:" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:id="@+id/search_btn"
                android:theme="@style/btn_Send_bg"
                android:clickable="true" />

        </LinearLayout>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/listView_chat"
            android:alpha="1"
            android:divider="@null"
            android:background="@null"
            android:transcriptMode="alwaysScroll"
            android:stackFromBottom="true"
            android:listSelector="#f8ffa0"
            android:layoutMode="clipBounds"
            android:accessibilityLiveRegion="assertive"
            android:backgroundTintMode="add"
            android:drawSelectorOnTop="false"
            android:elevation="@dimen/activity_horizontal_margin"
            android:fastScrollAlwaysVisible="false"
            android:fastScrollEnabled="true"
            android:layout_margin="10dp"
            android:layout_weight="0.69" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_message" />
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:weightSum="1"
        android:padding="5dp"
        android:layout_weight="0.54">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText_msg"
            android:layout_weight="1"
            android:focusable="true"
            android:ellipsize="middle" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_btn"
            android:id="@+id/btn_send"
            android:layout_margin="2dp"
            android:theme="@style/btn_Send_bg"
            android:clickable="true" />
    </LinearLayout>

</LinearLayout>